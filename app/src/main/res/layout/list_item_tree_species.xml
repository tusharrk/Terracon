<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/projectCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/basic_item_padding"
    android:padding="@dimen/padding_10"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/indexTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="@dimen/basic_item_padding"
            android:text=""
            android:textAppearance="@style/secondaryTextStyle"
            android:textSize="@dimen/desc_text_size"
            tools:text="1" />

        <TextView
            android:id="@+id/speciesNameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginStart="@dimen/padding_10"
            android:layout_marginBottom="@dimen/basic_item_padding"
            android:text=""
            android:textAppearance="@style/basicTextStyle"
            android:textSize="@dimen/desc_text_size"
            android:textStyle="bold"
            tools:text="Species Name" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="@dimen/basic_item_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="Girth:"
            android:textAppearance="@style/secondaryTextStyle"
            android:textSize="@dimen/desc_text_size"/>

        <TextView
            android:layout_weight="1"
            android:id="@+id/girthTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginStart="@dimen/basic_item_padding"
            android:text=""
            android:textAppearance="@style/secondaryTextStyle"
            android:textSize="@dimen/desc_text_size"
            android:textStyle="bold"
            tools:text="5" />

        <ImageView
            android:layout_weight="1"
            android:visibility="invisible"
            android:id="@+id/imageView"
            android:src="@drawable/baseline_image_24"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <ImageView
            android:layout_weight="0"
            android:id="@+id/editBtn"
            android:src="@drawable/baseline_edit_24"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:tint="@color/colorPrimary" />

<!--        <com.google.android.material.button.MaterialButton-->
<!--            android:id="@+id/editBtn"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginHorizontal="@dimen/basic_item_padding"-->
<!--            android:insetLeft="0dp"-->
<!--            android:insetTop="0dp"-->
<!--            android:insetRight="0dp"-->
<!--            android:insetBottom="0dp"-->
<!--            android:height="50dp"-->
<!--            android:width="50dp"-->
<!--            app:icon="@drawable/baseline_edit_24"-->
<!--            app:iconGravity="textStart"-->
<!--            app:iconPadding="0dp"-->
<!--            android:textAppearance="@style/basicButtonStyle" />-->
    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="@dimen/basic_item_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="Height:"
            android:textAppearance="@style/secondaryTextStyle"
            android:textSize="@dimen/desc_text_size"/>

        <TextView
            android:id="@+id/heightTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginStart="@dimen/basic_item_padding"
            android:text=""
            android:textAppearance="@style/secondaryTextStyle"
            android:textSize="@dimen/desc_text_size"
            android:textStyle="bold"
            tools:text="asd asd as d" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginStart="@dimen/padding_20"
            android:text="Diameter:"
            android:textAppearance="@style/secondaryTextStyle"
            android:textSize="@dimen/desc_text_size"/>

        <TextView
            android:id="@+id/diameterTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginStart="@dimen/basic_item_padding"
            android:text=""
            android:textAppearance="@style/secondaryTextStyle"
            android:textSize="@dimen/desc_text_size"
            android:textStyle="bold"
            tools:text="asd asd as d" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="@dimen/basic_item_padding"
            android:text="Comment:"
            android:textAppearance="@style/secondaryTextStyle"
            android:textSize="@dimen/desc_text_size"/>

        <TextView
            android:id="@+id/commentTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginStart="@dimen/padding_10"
            android:layout_marginBottom="@dimen/basic_item_padding"
            android:text=""
            android:textAppearance="@style/secondaryTextStyle"
            android:textSize="@dimen/desc_text_size"
            android:textStyle="bold"
            tools:text="asd asd as d" />
    </LinearLayout>


</LinearLayout>
