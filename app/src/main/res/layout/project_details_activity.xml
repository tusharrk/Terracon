<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/main_toolbar"
        layout="@layout/toolbar_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/basic_page_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_10"
                android:text="@string/project_details"
                android:textAppearance="@style/HeadingTextStyle"
                android:textSize="@dimen/heading_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/projectTypeTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_20"
                android:textAppearance="@style/HeadingTextStyle"
                android:textSize="@dimen/desc_text_size"
                android:layout_gravity="start"/>

            <TextView
                android:id="@+id/projectLocationTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_20"
                android:textAppearance="@style/HeadingTextStyle"
                android:textSize="@dimen/desc_text_size"
                android:layout_gravity="start"/>

            <TextView
                android:id="@+id/projectAreaTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_20"
                android:textAppearance="@style/HeadingTextStyle"
                android:textSize="@dimen/desc_text_size"
                android:layout_gravity="start"/>

            <TextView
                android:id="@+id/projectDescText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginVertical="@dimen/padding_50"
                android:layout_weight="1"
                android:textAppearance="@style/secondaryTextStyle"
                tools:text="af ad asfh ash a sfhaklf ahdf asdh fsd hfjkashdfjkasfjash fjkash  js ak jsd fh" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/startSurveyBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/padding_40"
                android:layout_marginVertical="@dimen/padding_40"
                android:background="@drawable/rounded_button"
                android:insetLeft="@dimen/padding_30"
                android:insetRight="@dimen/padding_30"
                android:text="Start (Bio)"
                android:textAppearance="@style/basicButtonStyle" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/startSurveyTreeBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/padding_40"
                android:layout_marginVertical="@dimen/padding_40"
                android:background="@drawable/rounded_button"
                android:insetLeft="@dimen/padding_30"
                android:insetRight="@dimen/padding_30"
                android:text="Start (Tree)"
                android:textAppearance="@style/basicButtonStyle" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>