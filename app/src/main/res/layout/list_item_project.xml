<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/projectCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:padding="@dimen/basic_page_padding">

    <TextView
        android:id="@+id/projectNameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textColor="@color/textColor"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="Project Mame" />

    <TextView
        android:id="@+id/projectDescText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/basic_item_padding"
        android:singleLine="true"
        android:textColor="@color/secondaryTextColor"
        android:textSize="16sp"
        tools:text="Project Desc" />

</LinearLayout>
