<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/projectCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:padding="@dimen/basic_page_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/pointCodeTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="@dimen/basic_item_padding"
            android:textColor="@color/textColor"
            android:text=""
            android:layout_weight="1"
            android:textSize="@dimen/basic_text_size"
            android:textStyle="bold"
            tools:text="Point Name" />

        <ImageView
            android:layout_weight="0"
            android:id="@+id/editBtn"
            android:src="@drawable/baseline_edit_24"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:tint="@color/colorPrimary" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/basic_item_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="1"
            android:id="@+id/dateTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/secondaryTextColor"
            android:textSize="16sp"
            tools:text="date" />

        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/timeTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginStart="@dimen/padding_10"
            android:textColor="@color/secondaryTextColor"
            android:textSize="16sp"
            tools:text="time" />


        <TextView
            android:gravity="end"
            android:layout_weight="1"
            android:id="@+id/habitatTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginStart="@dimen/padding_10"
            android:textColor="@color/secondaryTextColor"
            android:textSize="16sp"
            tools:text="habitat" />

    </LinearLayout>

    <Button
        android:layout_gravity="center"
        android:id="@+id/syncBtn"
        app:icon="@drawable/baseline_cloud_sync_24"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:text="@string/sync_data_with_server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>
